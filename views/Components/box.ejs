<% 
// Função para gerar número aleatório entre 1 e 50
function getRandomNumber(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
}

// Gera valores aleatórios para views e stars
var views = getRandomNumber(1, 50);
var stars = getRandomNumber(1, 50);
%>

<div class="card m-1 mb-4 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0" ><%= title %></h5>
        <div class="d-flex align-items-center">
            <div class="d-flex flex-column pr-3">
                <p class="mb-0"><i class="fas fa-eye"></i> <%= views %></p>
                <p class="mb-0"><i class="fas fa-star"></i> <%= stars %></p>        
            </div>
            <div>
                <a href="/<%= slug %>" class="btn" style="background-color: var(--secondary-color);">Learn more</a>
            </div>
        </div>
    </div>
</div>
